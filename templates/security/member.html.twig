{% extends 'base.html.twig' %}
{% block body %}
{% if app.user.title=="administrator" or app.user.title=="superadmin" %}
  {% include('superuser/adminnavbar.html.twig') %}

  <div class="page-wrapper mdc-toolbar-fixed-adjust">
      <main class="content-wrapper">
      <!-- start -->
        <div class="mdc-layout-grid">
          <div class="mdc-layout-grid__inner">
            <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12">
              <div class="mdc-card">
                <div class="mdc-layout-grid__inner">
                  <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-9">
                    <section class="purchase__card_section">
                      <p><span class="badge bg-secondary mr-1">{{ teacher|length }}</span> <span class="text-red font-weight-bold">{{ name }}</span> Staff members</p>
                    </section>
                  </div>
                </div>
              </div>
            </div>
            <!--end-->

            <!--start table-->
           <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12">
               <div class="mdc-card table-responsive" style="display:block;overflow-x:scroll;">
                <div class="card" style="padding-top:3%;">
                 <div class="card-body">
                    <table id="zero_config" class="table table-striped mt-5">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th class="text-left">Full Name</th>
                          <th>Email</th>
                          <th>Gender</th>
                          <th>Nationality</th>
                          <th>Marital Status</th>
                        </tr>
                      </thead>
                      <tbody>
                       {% for temp,show in teacher %}
                            <tr>
                              <td>{{ temp +1 }}</td>
                              <td class="text-left">{{ show.username }}</td>
                              <td>{{ show.email}}</td>
                              <td>{{ show.gender }}</td>
                              <td>{{ show.nationality }}</td>
                              <td>{{ show.martalstatus }}</td>
                            </tr>
                       {% endfor %}
                        </tbody>
                      </table>
                      </div>
                 </div>
              </div>
            </div>
            <!--end table -->
      </main>
</div>
        <script>
        /****************************************
         *       Basic Table                   *
         ****************************************/
        $('#zero_config').DataTable();
    </script>

{% endif %}

{% endblock %}